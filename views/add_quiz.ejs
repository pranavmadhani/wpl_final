<%- include ('partials/header') %>
<div class="container">
 
  <div>
    <div>
    </div>
    <h1>Add Quiz </h1>
  </div>
  <form action="/upload-quiz-json"  method="post">
    <div class="form-group">
      <input type="text" name="title" class="form-control" placeholder="title" />
    </div>
    
    <div class="form-group">
      <input type="text" name="image" class="form-control" placeholder="image name" />
    </div>
    <div class="form-group">
      <textarea name="quiz" class="form-control" placeholder="place json quiz content in specified format here...."></textarea>
    </div>

    <div>
      <label>Select your json file to upload:</label>
      <input type="file" name="quiz_json" />
      <div>
          <label for="category">Category</label>
          <select name="category" id="category" required>
              <option value="GK">GK</option>
              <option value="Movies">Movies</option>
              <option value="Science">Science</option>
              <option value="Sports">Sports</option>
              
          </select>
      </div>
  </div>
    <div class="form-group">
      <button type="submit" class="btn btn-info"multiple>Save</button>
    </div>
  </form>
  
  <a href="/">Cancel</a>
</div>
<%- include ('partials/footer') %>
<style>
  h1 {
    margin-top: 11px;
    padding-top: 8%;
  }
</style>
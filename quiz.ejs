    <script>
        let GLOBAL_STORE_FILE;
        let GLOBAL_INDEX = 0;
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });

        //read file and parse json
        document.getElementById('upload').onclick = function () {
            var files = document.getElementById('customFile').files;

            if (files.length <= 0) {
                return false;
            }

            var fr = new FileReader();

            fr.onload = function (e) {
                // console.log(e);
                populate(e);

            }

            fr.readAsText(files.item(0));

        };



        function populate(e) {

            var result = JSON.parse(e.target.result);
            GLOBAL_STORE_FILE = result;
            let MAX_SIZE = result.questions.length;
            doIt(GLOBAL_INDEX);
            document.getElementById('cnt').innerHTML = MAX_SIZE;
        }

//prev btn click
        $("#prev").click(function () {
            console.log("inside prev", GLOBAL_INDEX);
            if (GLOBAL_INDEX <= 0) 
            {
                
            }
            
          
            else {
                GLOBAL_INDEX;

                doIt(GLOBAL_INDEX--);
            }


        });
//next btn click
        $("#nxt").click(function () {

            doIt(GLOBAL_INDEX++);
              
        });

        function doIt(index) {


            index = GLOBAL_INDEX;
            if ( index < GLOBAL_STORE_FILE.questions.length ) {

                let result = GLOBAL_STORE_FILE;

                //setting options
                let question = document.getElementById("que");
                let option1 = document.getElementById("option1");
                let option2 = document.getElementById("option2");
                let option3 = document.getElementById("option3");
                let option4 = document.getElementById("option4");
                // let length = JSON.stringify(reformatted);

                question.innerHTML = result.questions[index].question;
                option1.innerHTML = result.questions[index].answers[0];
                option2.innerHTML = result.questions[index].answers[1];
                option3.innerHTML = result.questions[index].answers[2];
                option4.innerHTML = result.questions[index].answers[3];
              
            } else {
                console.log("break if")
                GLOBAL_INDEX--;
            }

        }
    </script>

